@model CleanArchitecture.Core.Entities.Customer
@{
    string check = Model.Active_Flag ? "checked" : "";
}

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 bordered-box">
        <form action="./" method="put">
            <div class="form-group-lg">
                <label>ID</label>
                <input class="form-control" type="number" disabled value="@Model.Id"/>
            </div>
            <div class="form-group-lg">
                <label for="Name">Nome</label>
                <input class="form-control" type="text" value="@Model.Name" name="Name" />
            </div>
                  <div class="form-group-lg">
                      <label for="Org_Name">Organização:</label>
                      <input type="text" class="form-control" value="@Model.Org_Name" name="Org_Name" />
                  </div>
            <div class="form-group-lg">
                <label for="Company_Id">Id da Organização</label>
                <input type="number" class="form-control" value="@Model.Company_Id" name="Company_Id" />
            </div>
            <div class="form-group-lg">
                <label for="Description">Descrição</label>
                <textarea class="form-control" name="Description" style="resize:vertical" onclick='this.style.height = "";this.style.height = this.scrollHeight + "px"'>@Model.Description</textarea>
            </div>
            <div class="form-group-lg">
                <label for="Active_Flag">Ativo</label>
                <input class="form-control checkbox-inline" style="max-width:64px" type="checkbox" name="Active_Flag" @check />
            </div>
            <hr />
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
    </div>
    <div class="col-lg-3"></div>
</div>
